<body>
    <!-- navbar start -->
    <nav class="navbar  overlay clearfix navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/home">
          <img src="../public/assets/img/logo.png" alt="logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin }}
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add project</a>
            </li>
            {{/if}}
          </ul>
          <span class="navbar-text">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              {{#if isLogin }}
               <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">Hello,{{user.name}}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              {{else}}
              <li class="nav-item">
                <a class="nav-link active fw-bold" aria-current="page" href="/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              {{/if}}

              <li class="nav-contact">
                <a href="/contact-me" class="btn btn-dark text-white" aria-current="page">Contact Me</a>
              </li>
            </ul>
          </span>
        </div>
      </div>
    </nav><br><br><br><br><br><br>
      <!-- navbar end -->

    {{!-- {{#if messages}}
    <div class="alert alert-success" role="alert">
      A simple success alertâ€”check it out!
    </div>
