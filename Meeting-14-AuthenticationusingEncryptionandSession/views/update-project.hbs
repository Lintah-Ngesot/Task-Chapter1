<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Personal Web | Add Project</title>
   
    <!-- bootstrap 5.1 -->
    <link rel="stylesheet" href="../public/assets/bootstrap/css/bootstrap.min.css"/>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->

    <!-- css -->
    <link rel="stylesheet" type="text/css" href="../public/assets/css/style.css">

    <!-- font awesome -->
    <link rel="stylesheet" href="../public/assets/fontawesome/css/all.css">

    <!-- google font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;1,200&family=Roboto+Mono:ital,wght@0,200;1,400&family=Source+Code+Pro:wght@200&display=swap" rel="stylesheet">
</head>

<body>
    <!-- navbar start -->
    <nav class="navbar  overlay clearfix navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="/home">
          <img src="../public/assets/img/logo.png" alt="logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarText">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            {{#if isLogin }}
            <li class="nav-item">
              <a class="nav-link" href="/add-project">Add project</a>
            </li>
            {{/if}}
          </ul>
          <span class="navbar-text">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              {{#if isLogin }}
               <li class="nav-item">
                <a class="nav-link" aria-current="page" href="#">Hello,{{user.name}}</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              {{else}}
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/register">Register</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              {{/if}}

              <li class="nav-contact">
                <a href="/contact-me" class="btn btn-dark text-white" aria-current="page">Contact Me</a>
              </li>
            </ul>
          </span>
        </div>
      </div>
    </nav><br><br><br>
    <!-- navbar end -->

    <!-- add project start -->
    <div class="position-relative ">
        <div class="position-absolute top-0 start-50 translate-middle-x"><br><br>
        {{#each update}}
            <form class="row g-3" action="/update-project/{{this.id}}" method="POST">
                <h4 class="text-center"><strong>UPDATE MY PROJECT</strong></h4>
                <div class="col-12">
                    <label for="inputProjectName" class="form-label">Project Name</label>
                    <input type="text" class="form-control shadow" id="inputProjectName" name="inputProjectName" value="{{this.project_name}}">
                  </div>
                <div class="col-md-6">
                  <label for="inputStartDate" class="form-label">Start Date</label>
                  <input type="date" class="form-control shadow" id="inputStartDate" name="inputStartDate" value="{{this.startUpload}}">
                </div>
                <div class="col-md-6">
                  <label for="inputEndDate" class="form-label">End Date</label>
                  <input type="date" class="form-control shadow" id="inputEndDate" name="inputEndDate" value="{{this.endUpload}}">
                </div>
                <div class="col-12 add-project-description">
                  <label for="inputDescription" class="form-label">Description</label>
                  <textarea class="form-control shadow" id="inputDescription" name="inputDescription">{{this.project_description}}</textarea>
                </div>
                <div class="col-md-12">
                  <label>Technologies</label><br>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input shadow" type="checkbox" id="nodejs" name="nodejs" value="fa-brands fa-node-js fa-2x">
                        <label class="form-check-label text-secondary" for="nodejs">Node js</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input shadow" type="checkbox" id="reactjs" name="reactjs" value="fa-brands fa-react fa-2x">
                        <label class="form-check-label text-secondary" for="reactjs">React Js</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input shadow" type="checkbox" id="nextjs" name="nextjs" value="fa-brands fa-battle-net fa-2x">
                        <label class="form-check-label text-secondary" for="nextjs">Next Js</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input shadow" type="checkbox" id="typescript" name="typescript" value="fa-brands fa-java fa-2x">
                        <label class="form-check-label text-secondary" for="typescript">TypeScript</label>
                    </div>
                </div>
                <div class="mb-3 form-update">
                    <label class="form-label">Upload Image</label><br>
                    <img src="../public/assets/img/img1.jpg" class="rounded" alt="...">
                    <div class="input-project-image-group">
                        <label class="rounded shadow" for="formFile">
                            <p class="rounded">Choose</p>
                            <img src="../public/assets/img/file.jpg" alt="file">
                        </label>
                        <input class="form-control" type="file" id="formFile" hidden>
                    </div>
                </div>
                <div class="col-12 project-submit">
                  <button type="submit" class="btn btn-dark rounded-pill">Submit</button>
                </div>
              </form>
              {{/each}}      
        </div>
      </div>
    <!-- add project end -->
</body>
</html>